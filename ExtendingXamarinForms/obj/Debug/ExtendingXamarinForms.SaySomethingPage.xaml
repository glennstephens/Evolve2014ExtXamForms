<?xml version="1.0" encoding="UTF-8"?>
<ContentPage Title="Say Something" xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="ExtendingXamarinForms.SaySomethingPage">
	<ContentPage.Content>
		<StackLayout Padding="20">
			<Label Text="What do you want to say?"></Label>
			<Entry Placeholder="Text to say" x:Name="TextToSay"></Entry>
			<Button Text="Talk" Clicked="SayTheText"></Button>
		</StackLayout>
	</ContentPage.Content>
</ContentPage>
